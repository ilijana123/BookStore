@model MVCBookk.ViewModels.BookGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Books" asp-action="Index" method="get">
    <p>
        <select asp-for="BookGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>
        <select asp-for="BookAuthor" asp-items="Model.Authors.Select(a => new SelectListItem { Value = a.FullName, Text = a.FullName })">
            <option value="">All</option>
        </select>
        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Books[0].FrontPage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Books[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Books[0].Author)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Books[0].YearPublished)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Books[0].Genres)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Books[0].AverageRating)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Books) {
            <tr>
                <td>
                    <div class="col-md-6">
                        <img src="@item.FrontPage" width="20%" alt="@item.Title">
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>

                    @if (item.AuthorId != null)
            {
                    <a asp-controller="Authors" asp-action="Details" asp-route-id="@item.AuthorId"> @Html.DisplayFor(modelItem => item.Author.FullName)</a>
            }
                </td>
                <td>

                    @Html.DisplayFor(modelItem => item.YearPublished)
                </td>
                <td>
                    @foreach (var genre in item.Genres)
                {
                    <a asp-controller="Genres" asp-action="Details" asp-route-id="@genre.GenreId">  @genre.Genre.GenreName </a>  <br />
                }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AverageRating)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
}
        </tbody>
    </table>
