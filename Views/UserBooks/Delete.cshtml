@using Microsoft.AspNetCore.Identity
@using MVCBookk.Areas.Identity.Data
@inject UserManager<MVCBookkUser> UserManager

@model MVCBookk.Models.UserBooks

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>UserBooks</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            AppUser Email
        </dt>
        <dd class="col-sm-10">
            @UserManager.FindByIdAsync(Model.AppUser).Result.Email
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-dark btn-block" asp-action="Index" asp-route-id="@Model?.Id">Back to List</a>
    </form>
</div>