@model MVCBookk.Models.Review

@{
    ViewData["Title"] = "Details";
}

<style>
    .review-details {
        margin-bottom: 20px;
    }

        .review-details .row {
            margin-bottom: 10px;
        }

        .review-details h4 {
            margin-bottom: 0;
        }

        .review-details p {
            margin-top: 0;
        }
</style>

<h1>Details</h1>

<div class="container">
    <div class="review-details">
        <div class="row">
            <div class="col-sm-2">
                <h4>@Html.DisplayNameFor(model => model.AppUser)</h4>
            </div>
            <div class="col-sm-10">
                <p>@User.Identity.Name</p>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                <h4>@Html.DisplayNameFor(model => model.Comment)</h4>
            </div>
            <div class="col-sm-10">
                <p>@Html.DisplayFor(model => model.Comment)</p>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                <h4>@Html.DisplayNameFor(model => model.Rating)</h4>
            </div>
            <div class="col-sm-10">
                <p>@Html.DisplayFor(model => model.Rating)</p>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                <h4>@Html.DisplayNameFor(model => model.Book)</h4>
            </div>
            <div class="col-sm-10">
                <p>@Html.DisplayFor(model => model.Book.Title)</p>
            </div>
        </div>
    </div>

    <div class="btn-group" role="group">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>
