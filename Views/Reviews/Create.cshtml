@using Microsoft.AspNetCore.Identity
@using MVCBookk.Areas.Identity.Data
@inject UserManager<MVCBookkUser> UserManager

@model MVCBookk.Models.Review

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Center the form */
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        /* Style the form container */
        .form-container {
            width: 400px;
            padding: 40px;
            background-color: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        /* Style form fields */
        .form-group {
            margin-bottom: 20px;
        }

        .control-label {
            font-weight: bold;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ced4da;
            border-radius: 5px;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }

        /* Style buttons */
        .btn-primary,
        .btn-outline-secondary {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
            border: none;
        }

        .btn-outline-secondary {
            background-color: transparent;
            color: #6c757d;
            border: 1px solid #6c757d;
        }

        /* Validation error message */
        .text-danger {
            color: #dc3545;
            font-size: 80%;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h1 class="mb-4">Create Review</h1>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="BookId" class="control-label">Book</label>
                    <select asp-for="BookId" class="form-control" asp-items="ViewBag.BookId"></select>
                    <span asp-validation-for="BookId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <!-- Assuming you want to hide the AppUser field and set it with the logged-in user -->
                    <input type="hidden" asp-for="AppUser" value="@UserManager.GetUserId(User)" />
                    <!-- If you want to display the logged-in user's username -->
                    <label class="control-label">Username</label>
                    <input type="text" class="form-control" value="@UserManager.GetUserName(User)" readonly>
                </div>
                <div class="form-group">
                    <label asp-for="Comment" class="control-label">Comment</label>
                    <input asp-for="Comment" class="form-control" />
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rating" class="control-label">Rating</label>
                    <input asp-for="Rating" class="form-control" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <button type="button" onclick="location.href='@Url.Action("Index", "Books")'" class="btn btn-outline-secondary">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
