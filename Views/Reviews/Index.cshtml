@using Microsoft.AspNetCore.Identity
@using MVCBookk.Areas.Identity.Data
@inject UserManager<MVCBookkUser> UserManager

    @model IEnumerable<MVCBookk.Models.Review>

        @{
    ViewData["Title"] = "Index";
        }

        <style>
            /* Custom CSS for larger text */
            .larger-text {
                font-size: 16px;
            }

            /* Custom CSS for larger table rows and table data */
            .table td, .table th {
                font-size: 18px;
                padding: 12px; /* Adjust padding as needed */
            }
        </style>

        <h1 class="mb-4 larger-text">Reviews </h1>
        <!--
        <p>
            <a class="btn btn-primary mb-3" asp-action="Create">Create New Review</a>
        </p>
        --->
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col" class="larger-text">User</th>
                        <th scope="col" class="larger-text">Comment</th>
                        <th scope="col" class="larger-text">Rating</th>
                        <th scope="col" class="larger-text">Book Title</th>
                        <th scope="col" class="larger-text">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
            {
                    <tr>
                        <td class="larger-text">
                            @UserManager.FindByIdAsync(item.AppUser).Result.Email
                        </td>
                        <td class="larger-text">@Html.DisplayFor(modelItem => item.Comment)</td>
                        <td class="larger-text">@Html.DisplayFor(modelItem => item.Rating)</td>
                        <td class="larger-text">@Html.DisplayFor(modelItem => item.Book.Title)</td>
                        <td class="larger-text">
                            <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
            }
                </tbody>
            </table>
        </div>
