@using Microsoft.AspNetCore.Identity
@using MVCBookk.Areas.Identity.Data

@inject UserManager<MVCBookkUser> UserManager

@model MVCBookk.Models.Review

@{
    ViewData["Title"] = "Delete";
    string GetUserName(string userId)
    {
        var user = UserManager.FindByIdAsync(userId).Result;
        return user != null ? user.UserName : "Unknown";
    }
}

<div class="container">
    <h1>Delete Review</h1>

    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Are you sure you want to delete this?</h4>
    </div>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Review Details</h4>
            <dl class="row">
                <dt class="col-sm-2">User</dt>
                <dd class="col-sm-10">@GetUserName(Model.AppUser)</dd>
                <dt class="col-sm-2">Comment</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Comment)</dd>
                <dt class="col-sm-2">Rating</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Rating)</dd>
                <dt class="col-sm-2">Book Title</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Book.Title)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-action="Index" class="btn btn-dark">Back to List</a>
    </form>
</div>
